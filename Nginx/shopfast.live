# =====================================================
# üåç HTTP Redirect Server (Port 80)
# =====================================================
server {
    listen 80;
    listen [::]:80;
    server_name shopfast.live www.shopfast.live;

    location /.well-known/acme-challenge/ {
        root /var/www/letsencrypt;
    }

    location / {
        return 301 https://$host$request_uri;
    }

    access_log /var/log/nginx/shopfast-http.access.log;
    error_log /var/log/nginx/shopfast-http.error.log;
}

# =====================================================
# üöÄ Main HTTPS Server Block (ShopFast Production)
# =====================================================
server {
    listen 443 ssl;
    listen [::]:443 ssl ipv6only=on;
    server_name shopfast.live;

    # =======================
    # üì¶ Angular Frontend Root
    # =======================
    root /var/www/shopfast.live;
    index index.html;

    # SSL configuration
    ssl_certificate /etc/letsencrypt/live/shopfast.live/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/shopfast.live/privkey.pem;
    include /etc/letsencrypt/options-ssl-nginx.conf;
    ssl_dhparam /etc/letsencrypt/ssl-dhparams.pem;

    # =====================================================
    # üß† Backend API Proxy (Spring Boot)
    # =====================================================
    location ~ ^/api/v1/product(/|$) {
        proxy_pass http://127.0.0.1:8081;     # ‚úÖ Keep trailing slash
        proxy_http_version 1.1;
        proxy_set_header Connection "";
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto https;

        proxy_read_timeout 120s;
        proxy_connect_timeout 60s;

        # Prevent Angular from caching API responses
        expires off;
        add_header Cache-Control "no-cache, no-store, must-revalidate";
        add_header Pragma "no-cache";
        add_header Expires 0;

        # Optional: return JSON error if backend is unreachable
        error_page 502 503 504 = @backend_error;
    }

